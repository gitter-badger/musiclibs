{
    "parser": "babel-eslint",
    "plugins": [
        "react"
    ],

    "env": {
        "es6": true,

        // In general we don't want to access the DOM via browser globals
        // without a reason, so restrict what globals are allowed to
        // exclude the DOM API
        "shared-node-browser": true
    },

    "globals": {
        // Polyfilled if necessary
        "fetch": false
    },

    "rules": {
        "no-var": "error",
        "require-yield": "error",

        "prefer-arrow-callback": "warn",
        "prefer-const": "warn",
        "prefer-spread": "warn",
        "prefer-reflect": "warn",
        "prefer-template": "warn",

        // React and JSX specific lints
        "jsx-quotes": ["warn", "prefer-double"],
        "react/jsx-closing-bracket-location": ["warn", "after-props"],
        "react/jsx-curly-spacing": "error",
        "react/jsx-no-duplicate-props": "error",
        "react/jsx-no-undef": "error",
        "react/no-did-mount-set-state": "error",
        "react/no-did-update-set-state": "error",
        "react/no-multi-comp": "warn",
        "react/no-unknown-property": "error",
        "react/jsx-uses-react": "error",
        "react/jsx-uses-vars": "error",
        "react/prop-types": "error",
        "react/react-in-jsx-scope": "error",
        "react/self-closing-comp": "warn",
        "react/sort-comp": "warn",
        "react/wrap-multilines": "warn",

        // Enable this because we can use arrow callbacks anonymously
        "func-names": "error",

        // There are a ton of exceptions to the constructors rule
        "new-cap": ["error", {
            "capIsNewExceptions": [
                "Im.List",
                "Im.Map",
                "Im.Range",
                "Im.Repeat",
                "Im.Set",
                "Im.Seq",
                "Im.Range",
                "Im.Record",
                "SearchResultRecord",
                "SearchStateRecord"
            ]
        }]
    }
}
